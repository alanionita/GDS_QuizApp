<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/questions_text_margin</item>
        <item name="android:layout_marginRight">@dimen/questions_text_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">@dimen/cards_top_bottom_margin</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:layout_marginBottom">@dimen/cards_top_bottom_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/cards_top_bottom_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_side_margin</item>
        <item name="android:layout_marginRight">@dimen/card_side_margin</item>
    </style>
</resources>
