<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Vegan Diet Facts Quiz"
            android:textSize="32sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="This is a quiz to help you better understand a vegan diet. Instead of asking you vegan friends annoying questions, use us!"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="1. Which of these is likely to be lacking in a vegan diet?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q1-a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vitamin E" />

            <RadioButton
                android:id="@+id/q1-b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vitamin C" />

            <RadioButton
                android:id="@+id/q1-c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vitamin B12" />

            <RadioButton
                android:id="@+id/q1-d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiber" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="2. Beans and legumes are plant-based sources of iron. Which of these contains the most iron?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q2-a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kidney beans" />

            <RadioButton
                android:id="@+id/q2-b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lentils" />

            <RadioButton
                android:id="@+id/q2-c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lima beans" />

            <RadioButton
                android:id="@+id/q2-d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fiber" />

            <RadioButton
                android:id="@+id/q2-e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chickpeas" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="3. Honey is a plant food?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q3-a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="True" />

            <RadioButton
                android:id="@+id/q3-b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="False" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="4. Soy foods are a good source of calcium."
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q4-a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sometimes" />

            <RadioButton
                android:id="@+id/q4-b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Always" />

            <RadioButton
                android:id="@+id/q4-c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Never" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="5. It's difficult to obtain sufficient vitamin D from plant foods."
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q5-a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="False" />

            <RadioButton
                android:id="@+id/q5-b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="True" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="6. Which of these seeds are richest in healthy omega-3 fats?"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q6-a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pumpkin" />

            <RadioButton
                android:id="@+id/q6-b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flax" />

            <RadioButton
                android:id="@+id/q6-c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunflower" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="7. A vegan or vegetarian diet is bound to be healthy."
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/q7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/q7-a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="True" />

            <RadioButton
                android:id="@+id/q7-b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="False" />
        </RadioGroup>


        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Submit"
            android:onClick="submitAnswers"/>

    </LinearLayout>
</ScrollView>